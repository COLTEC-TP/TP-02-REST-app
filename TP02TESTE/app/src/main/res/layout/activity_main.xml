<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="zen.tp02teste.MainActivity">

    <FrameLayout
        android:id="@+id/mapsFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/getLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_location_green"
        android:alpha="0.7"
        android:onClick="getMyLocation"
        android:text="Location" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/getLocation"
        android:layout_toStartOf="@+id/getLocation"
        android:padding="13dp"
        android:alpha="0.7"
        android:background="@color/lime"
        android:id="@+id/ACTextAddress"
        android:inputType="text"
        android:hint="location" />
</RelativeLayout>
