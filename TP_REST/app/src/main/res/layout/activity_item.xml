<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Item_Lista"
    android:background="#FFFFF6">

    <!-- Imagem -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="172dp"
        android:layout_width="match_parent"
        android:id="@+id/linear_img">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_img"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pokeballs_blur"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/Pokemon_Img"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="18dp"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:src="@drawable/psyduck" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Nome -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:id="@+id/linear_nome"
        android:layout_below="@+id/linear_img">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_nome"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nome_img"
                    android:src="@drawable/grey_pokemons_blur"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pokemon_Nome"
                    android:text="Psyduck"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Tipo 1 -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="45dp"
        android:layout_width="180dp"
        android:id="@+id/linear_tipo1"
        android:layout_below="@+id/linear_nome"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_tipo1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grey_pokemons_blur"
                    android:scaleType="centerCrop"
                    android:scaleX="2.5"
                    android:scaleY="2.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tipo_1"
                    android:text="TYPE 1"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Tipo 2 -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="45dp"
        android:layout_width="180dp"
        android:id="@+id/linear_tipo2"
        android:layout_below="@+id/linear_nome"
        android:layout_alignParentRight="true">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_tipo2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grey_pokemons_blur"
                    android:scaleType="centerCrop"
                    android:scaleY="2.5"
                    android:scaleX="2.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tipo_2"
                    android:text="TYPE 2"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Stats -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/linear_stats"
        android:layout_below="@+id/linear_tipo1"
        android:gravity="center_vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_stats"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grey_pokemons_blur"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stats"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <!-- HP -->
                <ProgressBar
                    android:id="@+id/Bar_HP"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:max="120"
                    android:progress="55"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/HP_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_HP"
                    android:layout_alignBottom="@id/Bar_HP"
                    android:layout_alignStart="@+id/Bar_Ataque_Especial"
                    android:layout_alignEnd="@id/Bar_Ataque_Especial"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="55"/>

                <TextView
                    android:id="@+id/Txt_HP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_HP"
                    android:layout_toStartOf="@+id/Bar_HP"
                    android:fontFamily="monospace"
                    android:text="HP"
                    android:textColor="#969393"
                    android:textSize="17dp" />

                <!-- Agilidade -->
                <ProgressBar
                    android:id="@+id/Bar_Agilidade"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/Bar_HP"
                    android:layout_marginBottom="10dp"
                    android:max="120"
                    android:progress="70"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/Agilidade_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_Agilidade"
                    android:layout_alignBottom="@id/Bar_Agilidade"
                    android:layout_alignStart="@+id/Bar_Ataque_Especial"
                    android:layout_alignEnd="@id/Bar_Ataque_Especial"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="70"/>

                <TextView
                    android:id="@+id/Txt_Agilidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_Agilidade"
                    android:layout_toStartOf="@+id/Bar_Agilidade"
                    android:fontFamily="monospace"
                    android:text="Agil."
                    android:textColor="#969393"
                    android:textSize="17dp" />

                <!-- Defesa Especial -->
                <ProgressBar
                    android:id="@+id/Bar_Defesa_Especial"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/Bar_Agilidade"
                    android:layout_marginBottom="10dp"
                    android:max="120"
                    android:progress="70"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/Defesa_Especial_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_Defesa_Especial"
                    android:layout_alignBottom="@id/Bar_Defesa_Especial"
                    android:layout_alignStart="@+id/Bar_Ataque_Especial"
                    android:layout_alignEnd="@id/Bar_Ataque_Especial"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="70"/>

                <TextView
                    android:id="@+id/Txt_Defesa_Especial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_Defesa_Especial"
                    android:layout_alignStart="@+id/Txt_Ataque_Especial"
                    android:fontFamily="monospace"
                    android:text="Def. E."
                    android:textColor="#969393"
                    android:textSize="17dp" />

                <!-- Defesa -->
                <ProgressBar
                    android:id="@+id/Bar_Defesa"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/Bar_Defesa_Especial"
                    android:layout_marginBottom="10dp"
                    android:max="120"
                    android:progress="70"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/Defesa_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_Defesa"
                    android:layout_alignBottom="@id/Bar_Defesa"
                    android:layout_alignStart="@+id/Bar_Ataque_Especial"
                    android:layout_alignEnd="@id/Bar_Ataque_Especial"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="70"/>

                <TextView
                    android:id="@+id/Txt_Defesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_Defesa"
                    android:layout_toStartOf="@+id/Bar_Defesa"
                    android:fontFamily="monospace"
                    android:text="Defesa"
                    android:textColor="#969393"
                    android:textSize="17dp" />

                <!-- Ataque Especial -->
                <ProgressBar
                    android:id="@+id/Bar_Ataque_Especial"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/Bar_Defesa"
                    android:layout_marginBottom="10dp"
                    android:max="120"
                    android:progress="70"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/Ataque_Especial_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_Ataque_Especial"
                    android:layout_alignBottom="@id/Bar_Ataque_Especial"
                    android:layout_alignStart="@+id/Bar_Ataque_Especial"
                    android:layout_alignEnd="@id/Bar_Ataque_Especial"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="70"/>

                <TextView
                    android:id="@+id/Txt_Ataque_Especial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_Ataque_Especial"
                    android:layout_toStartOf="@+id/Bar_Ataque_Especial"
                    android:fontFamily="monospace"
                    android:text="Ata. E."
                    android:textColor="#969393"
                    android:textSize="17dp" />

                <!-- Ataque-->
                <ProgressBar
                    android:id="@+id/Bar_Ataque"
                    style="@style/CustomProgressBar"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_above="@+id/Bar_Ataque_Especial"
                    android:layout_marginBottom="10dp"
                    android:max="120"
                    android:progress="45" />

                <TextView
                    android:id="@+id/Ataque_Num"
                    android:background="#00000000"
                    android:layout_alignTop="@id/Bar_Ataque"
                    android:layout_alignBottom="@id/Bar_Ataque"
                    android:layout_alignStart="@+id/Bar_Ataque"
                    android:layout_alignEnd="@id/Bar_Ataque"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:layout_height="0dp"
                    android:layout_width="35dp"
                    android:layout_centerHorizontal="true"
                    android:text="70"/>

                <TextView
                    android:id="@+id/Txt_Ataque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bar_Ataque"
                    android:layout_toStartOf="@+id/Bar_Ataque"
                    android:fontFamily="monospace"
                    android:text="Ataque"
                    android:textColor="#969393"
                    android:textSize="18dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>




</RelativeLayout>