<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClimaDetalhesActivity">

    <TextView
        android:id="@+id/cidade"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Cidade" />

    <TextView
        android:id="@+id/data"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Data" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Temperatura" />

    <TextView
        android:id="@+id/umidade"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Umidade" />

    <TextView
        android:id="@+id/sensacao"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="Sensacao" />

    <TextView
        android:id="@+id/uv"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="UV" />

    <TextView
        android:id="@+id/propabilidadeChuva"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="204dp"
        android:text="Propabilidade de Chuva" />

    <TextView
        android:id="@+id/precipitacaoChuva"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/propabilidadeChuva"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-204dp"
        android:text="Precipitacao de Chuva" />

    <TextView
        android:id="@+id/vento"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/precipitacaoChuva"
        android:layout_centerHorizontal="true"
        android:text="Velocidade do vento" />

</RelativeLayout>