<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/price_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/price"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/first_card"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/price_chart"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:textSize="10dp"
                android:text="@string/region"/>

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                tools:text="R$ 25487.08" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/second_card"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/first_card"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/region2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/price2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                tools:text="R$ 25487.08" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/third_card"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/second_card"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/region3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/price3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                tools:text="R$ 25487.08" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>