<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mtgo007.petfinder.DetalhePet">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_detalhe"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorPrimary"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TableLayout
        android:layout_width="match_parent"
        android:scrollbars = "vertical"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_detalhe"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:stretchColumns="1"
        android:gravity="center"
        android:id="@+id/tab">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Name"/>

            <TextView
                android:id="@+id/nome_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Age"/>

            <TextView
                android:id="@+id/idade_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sex"/>

            <TextView
                android:id="@+id/sexo_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/breed"/>

            <TextView
                android:id="@+id/raca_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Address"/>

            <TextView
                android:id="@+id/endereco_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/link"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/City"/>

            <TextView
                android:id="@+id/cidade_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/State"/>

            <TextView
                android:id="@+id/estado_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Phone"/>

            <TextView
                android:id="@+id/telefone_detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/link"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Description"
                android:id="@+id/desc"/>


        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/descricao_detalhe"
        android:layout_width="match_parent"
        android:layout_below="@id/tab"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scrollbars = "vertical"
        android:textAlignment="center"
        />

</RelativeLayout>
