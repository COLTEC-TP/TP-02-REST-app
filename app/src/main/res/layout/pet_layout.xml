<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/foto"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/foto"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cidade"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/foto"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foto"
        android:layout_alignStart="@+id/endereco"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cidade"
        android:layout_below="@+id/cidade"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_alignStart="@+id/estado"
        android:layout_below="@+id/estado"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/raca"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foto"
        android:layout_below="@+id/telefone"
        android:layout_marginStart="11dp"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/raca"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/estado"
        android:text="TextView" />

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_alignStart="@+id/raca"
        android:layout_below="@+id/raca"
        android:layout_marginTop="21dp"
        android:text="TextView" />
</RelativeLayout>